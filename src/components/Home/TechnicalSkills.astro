---
import TechnicalSkillsData from "../../data/TechnicalSkills.json";
import SkilliconList from "./SkilliconList.astro";
import { Code } from "@lucide/astro";
import { Boxes } from "@lucide/astro";
import { CogIcon } from "@lucide/astro";

const languages = TechnicalSkillsData["Languages"];
const frameworks = TechnicalSkillsData["Frameworks & Libraries"];
const tools = TechnicalSkillsData["Tools & Technologies"];
const practices = TechnicalSkillsData["Development Practices"];
---

<section class="py-20 bg-base-100">
    <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Technical Skills
                </h2>
                <div class="w-20 h-1 bg-primary mx-auto"></div>
            </div>

            <div
                class="flex flex-col md:flex-row gap-8 justify-center items-center"
            >
                <!-- Languages -->
                <SkilliconList title="Languages" iconList={languages}>
                    <Code class="w-6 h-6 text-primary" />
                </SkilliconList>

                <!-- Frameworks & Libraries -->
                <SkilliconList
                    title="Frameworks & Libraries"
                    iconList={frameworks}
                >
                    <Boxes class="w-6 h-6 text-primary" />
                </SkilliconList>

                <!-- Tools & Technologies -->
                <SkilliconList title="Tools & Technologies" iconList={tools}>
                    <CogIcon class="w-6 h-6 text-primary" />
                </SkilliconList>
            </div>

            <!-- Development Practices -->
            <div class="mt-12">
                <h3 class="text-2xl font-bold text-center mb-8">
                    Development Practices
                </h3>
                <div class="flex flex-wrap justify-center gap-3">
                    {
                        practices.map((practice) => (
                            <div class="badge badge-lg badge-outline">
                                {practice}
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Custom animations and enhancements */
    .badge {
        transition: all 0.2s ease;
    }

    .badge:hover {
        transform: scale(1.1);
    }
</style>
