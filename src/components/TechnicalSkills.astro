---
import TechnicalSkillsData from "../data/TechnicalSkills.json";

const languages = TechnicalSkillsData["Languages"];
const frameworks = TechnicalSkillsData["Frameworks & Libraries"];
const tools = TechnicalSkillsData["Tools & Technologies"];
const practices = TechnicalSkillsData["Development Practices"];
---

<section class="py-20 bg-base-100">
    <div class="container mx-auto px-4">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Technical Skills
                </h2>
                <div class="w-20 h-1 bg-primary mx-auto"></div>
            </div>

            <div
                class="flex flex-col md:flex-row gap-8 justify-center items-center"
            >
                <!-- Languages -->
                <div class="card bg-base-200 shadow-lg">
                    <div class="card-body">
                        <h3 class="card-title text-primary mb-4">
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
                                ></path>
                            </svg>
                            Languages
                        </h3>
                        <div
                            class="flex flex-wrap gap-4 justify-center items-center"
                        >
                            {
                                languages.map((lang) => (
                                    <div class="flex flex-col items-center gap-2">
                                        <img
                                            src={`https://skillicons.dev/icons?i=${lang["skillicon-name"]}`}
                                            alt={lang["name"]}
                                            class="w-12 h-12"
                                        />
                                        <span class="text-sm font-medium">
                                            {lang["name"]}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <!-- Frameworks & Libraries -->
                <div class="card bg-base-200 shadow-lg">
                    <div class="card-body">
                        <h3 class="card-title text-primary mb-4">
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            Frameworks & Libraries
                        </h3>
                        <div
                            class="flex flex-wrap gap-4 justify-center items-center"
                        >
                            {
                                frameworks.map((framework) => (
                                    <div class="flex flex-col items-center gap-2">
                                        <img
                                            src={`https://skillicons.dev/icons?i=${framework["skillicon-name"]}`}
                                            alt={framework["name"]}
                                            class="w-12 h-12"
                                        />
                                        <span class="text-sm font-medium">
                                            {framework["name"]}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>

                <!-- Tools & Technologies -->
                <div class="card bg-base-200 shadow-lg">
                    <div class="card-body">
                        <h3 class="card-title text-primary mb-4">
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 20 20"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z"
                                    clip-rule="evenodd"></path>
                            </svg>
                            Tools & DevOps
                        </h3>
                        <div
                            class="flex flex-wrap gap-4 justify-center items-center"
                        >
                            {
                                tools.map((tool) => (
                                    <div class="flex flex-col items-center gap-2">
                                        <img
                                            src={`https://skillicons.dev/icons?i=${tool["skillicon-name"]}`}
                                            alt={tool["name"]}
                                            class="w-12 h-12"
                                        />
                                        <span class="text-sm font-medium">
                                            {tool["name"]}
                                        </span>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Development Practices -->
            <div class="mt-12">
                <h3 class="text-2xl font-bold text-center mb-8">
                    Development Practices
                </h3>
                <div class="flex flex-wrap justify-center gap-3">
                    {
                        practices.map((practice) => (
                            <div class="badge badge-lg badge-outline">
                                {practice}
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </div>
</section>
