---

import { SquareArrowOutUpRight, BadgeCheck } from "@lucide/astro";

const { project, index } = Astro.props;
---

<div class="max-w-7xl mx-auto">
    <div
        class={`grid grid-cols-1 lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? "lg:grid-flow-col-dense" : ""}`}
    >
        <!-- Project Image -->
        <div class={`${index % 2 === 1 ? "lg:col-start-2" : ""}`}>
            <div class="relative group">
                <div
                    class="absolute inset-0 bg-primary/20 rounded-2xl transform rotate-3 group-hover:rotate-6 transition-transform duration-300"
                >
                </div>
                <div
                    class="relative bg-base-200 rounded-2xl overflow-hidden shadow-2xl"
                >
                    <img
                        src={project.image}
                        alt={`${project.title} preview`}
                        class="w-full h-64 md:h-80 object-cover"
                        loading="lazy"
                    />
                    <div
                        class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                    >
                    </div>
                </div>
            </div>
        </div>

        <!-- Project Details -->
        <div
            class={`${index % 2 === 1 ? "lg:col-start-1 lg:row-start-1" : ""}`}
        >
            <div class="space-y-6">
                <!-- Project Header -->
                <div>
                    <div class="flex items-center gap-3 mb-2">
                        <h3 class="text-2xl md:text-3xl font-bold text-primary">
                            {project.title}
                        </h3>
                        <div class="badge badge-success badge-sm">
                            {project.status}
                        </div>
                    </div>
                    <p class="text-lg font-medium text-base-content/80 mb-4">
                        {project.subtitle}
                    </p>
                    <p class="text-base-content/70 leading-relaxed">
                        {project.longDescription}
                    </p>
                </div>

                <!-- Technologies -->
                <div>
                    <h4 class="font-semibold mb-3">Technologies Used</h4>
                    <div class="flex flex-wrap gap-2">
                        {
                            project.technologies.map((tech: any) => (
                                <span class="badge badge-outline">{tech}</span>
                            ))
                        }
                    </div>
                </div>

                <!-- Key Features -->
                <div>
                    <h4 class="font-semibold mb-3">Key Features</h4>
                    <div class="grid gap-2">
                        {
                            project.features.slice(0, 3).map((feature: any) => (
                                <div class="flex items-start gap-2">
                                    <BadgeCheck class="w-4 h-4 text-primary mt-1 flex-shrink-0" />
                                    <span class="text-sm">{feature}</span>
                                </div>
                            ))
                        }
                    </div>
                </div>

                <!-- Project Links -->
                <div class="flex flex-wrap gap-3 pt-4">
                    <a
                        href={project.demoUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-primary"
                    >
                        <SquareArrowOutUpRight class="w-4 h-4 mr-2" />
                        Live Demo
                    </a>
                    <a
                        href={project.githubUrl}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="btn btn-outline"
                    >
                        <svg
                            class="w-4 h-4 mr-2"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                            ></path>
                        </svg>
                        View Code
                    </a>
                    <!-- <button
                        class="btn btn-ghost"
                        onclick={`document.getElementById('${project.id}-modal').showModal()`}
                    >
                        <svg
                            class="w-4 h-4 mr-2"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                        >
                            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"></path>
                            <path
                                fill-rule="evenodd"
                                d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z"
                                clip-rule="evenodd"></path>
                        </svg>
                        Details
                    </button> -->
                </div>
            </div>
        </div>
    </div>
</div>
