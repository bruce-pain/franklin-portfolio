---
// Layout.astro
import "./src/styles/global.css";
export interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "Franklin Ikeh - Backend Software Engineer specializing in FastAPI, Python, and scalable web applications.",
} = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="dark">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="min-h-screen bg-base-100 text-base-content">
        <!-- Header -->
        <header
            class="navbar bg-base-100 shadow-sm border-b border-base-300 sticky top-0 z-50"
        >
            <div
                class="container mx-auto px-4 flex justify-between items-center"
            >
                <!-- Mobile menu button -->
                <div class="navbar-start">
                    <div class="dropdown lg:hidden">
                        <div tabindex="0" role="button" class="btn btn-ghost">
                            <svg
                                class="w-5 h-5"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </div>
                        <ul
                            tabindex="0"
                            class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52 border border-base-300"
                        >
                            <li>
                                <a
                                    href="/"
                                    class="hover:bg-primary hover:text-primary-content"
                                    >Home</a>
                            </li>
                            <li>
                                <a
                                    href="/projects"
                                    class="hover:bg-primary hover:text-primary-content"
                                    >Projects</a>
                            </li>
                            <li>
                                <a
                                    href="/blog"
                                    class="hover:bg-primary hover:text-primary-content"
                                    >Blog</a>
                            </li>
                        </ul>
                    </div>

                    <!-- Name/Logo -->
                    <a
                        href="/"
                        class="btn btn-ghost text-xl font-bold text-primary"
                    >
                        Franklin Ikeh
                    </a>
                </div>

                <!-- Desktop Navigation -->
                <div class="navbar-center hidden lg:flex">
                    <ul class="menu menu-horizontal px-1 gap-2">
                        <li>
                            <a
                                href="/"
                                class="btn btn-ghost hover:bg-primary hover:text-primary-content"
                                >Home</a>
                        </li>
                        <li>
                            <a
                                href="/projects"
                                class="btn btn-ghost hover:bg-primary hover:text-primary-content"
                                >Projects</a>
                        </li>
                        <li>
                            <a
                                href="/blog"
                                class="btn btn-ghost hover:bg-primary hover:text-primary-content"
                                >Blog</a>
                        </li>
                    </ul>
                </div>

                <!-- Theme Toggle -->
                <div class="navbar-end">
                    <label class="swap swap-rotate btn btn-ghost btn-circle">
                        <input
                            type="checkbox"
                            class="theme-controller"
                            value="light"
                        />

                        <!-- Sun icon -->
                        <svg
                            class="swap-off fill-current w-6 h-6"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
                            ></path>
                        </svg>

                        <!-- Moon icon -->
                        <svg
                            class="swap-on fill-current w-6 h-6"
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 24 24"
                        >
                            <path
                                d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
                            ></path>
                        </svg>
                    </label>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-grow">
            <slot />
        </main>

        <!-- Footer -->
        <footer
            class="footer footer-center bg-base-200 text-base-content p-10 mt-20"
        >
            <div class="container mx-auto">
                <!-- Contact Info -->
                <div class="mb-8">
                    <h3 class="text-2xl font-bold mb-4">Let's Connect</h3>
                    <p class="text-base-content/70 max-w-md mx-auto">
                        I'm always open to discussing new opportunities,
                        interesting projects, or just having a chat about
                        technology.
                    </p>
                </div>

                <!-- Contact Details -->
                <div
                    class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full max-w-4xl"
                >
                    <!-- Direct Contact -->
                    <div class="space-y-4">
                        <h4 class="font-semibold text-lg">Direct Contact</h4>
                        <div class="space-y-3">
                            <a
                                href="mailto:ikehfranklin06@gmail.com"
                                class="flex items-center gap-3 hover:text-primary transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                                    ></path>
                                    <path
                                        d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                                    ></path>
                                </svg>
                                ikehfranklin06@gmail.com
                            </a>
                            <a
                                href="tel:+2349079016973"
                                class="flex items-center gap-3 hover:text-primary transition-colors"
                            >
                                <svg
                                    class="w-5 h-5"
                                    fill="currentColor"
                                    viewBox="0 0 20 20"
                                >
                                    <path
                                        d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                                    ></path>
                                </svg>
                                +234-907-901-6973
                            </a>
                        </div>
                    </div>

                    <!-- Contact Form -->
                    <div class="space-y-4">
                        <h4 class="font-semibold text-lg">Quick Message</h4>
                        <form class="space-y-3" action="#" method="POST">
                            <input
                                type="text"
                                placeholder="Your Name"
                                class="input input-bordered w-full input-sm"
                                required
                            />
                            <input
                                type="email"
                                placeholder="Your Email"
                                class="input input-bordered w-full input-sm"
                                required
                            />
                            <textarea
                                placeholder="Your Message"
                                class="textarea textarea-bordered w-full h-20 text-sm"
                                required></textarea>
                            <button
                                type="submit"
                                class="btn btn-primary btn-sm w-full"
                            >
                                Send Message
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Social Links -->
                <div class="mt-8">
                    <h4 class="font-semibold text-lg mb-4">Follow Me</h4>
                    <div class="grid grid-flow-col gap-4">
                        <a
                            href="https://github.com/bruce-pain"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn btn-ghost btn-circle hover:btn-primary"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="https://linkedin.com/in/franklin-ikeh"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn btn-ghost btn-circle hover:btn-primary"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                                ></path>
                            </svg>
                        </a>
                        <a
                            href="https://x.com/your-twitter-handle"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="btn btn-ghost btn-circle hover:btn-primary"
                        >
                            <svg
                                class="w-6 h-6"
                                fill="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                                ></path>
                            </svg>
                        </a>
                    </div>
                </div>

                <!-- Copyright -->
                <div class="mt-8 pt-8 border-t border-base-300">
                    <p class="text-base-content/60">
                        Â© 2024 Franklin Ikeh. Built with <a
                            href="https://astro.build"
                            class="link link-primary">Astro</a
                        > and <a
                            href="https://tailwindcss.com"
                            class="link link-primary">Tailwind CSS</a
                        >
                    </p>
                </div>
            </div>
        </footer>

        <!-- Theme Controller Script -->
        <script>
            import {
                setupThemeController,
                setupNavHighlighter,
            } from "../scripts/theme-controller.ts";

			setupThemeController();
			setupNavHighlighter();
        </script>
    </body>
</html>
